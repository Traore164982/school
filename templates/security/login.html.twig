{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous"></head>
            {{ encore_entry_link_tags('app') }}
{% endblock %}
{% block body %}
    <h2 class="text-center mt-5">Connexion</h2>
    <form method="post" action="{{ path('security_login') }}">
        <div class="form-group mb-3 p-3 col-6 offset-3">
          <label for="login" class="form-label">Login :</label>
          <input type="text" name="_username" id="" required class="form-control" placeholder="">
        </div>
        <div class="form-group mb-3 p-3 col-6 offset-3">
          <label for="password" class="form-label">Password :</label>
          <input type="password" name="_password" id="" required class="form-control" placeholder="">
        </div>

        <button type="submit" class="btn btn-primary col-4 offset-4">Connexion</button>


    </form>

{% endblock %}